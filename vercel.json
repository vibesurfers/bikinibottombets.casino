{
  "buildCommand": "",
  "outputDirectory": "website",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/spider/**/*.ts": {
      "includeFiles": "api/lib/**",
      "maxDuration": 60
    },
    "api/org-spider/**/*.ts": {
      "includeFiles": "api/lib/**",
      "maxDuration": 120
    },
    "api/algolia/**/*.ts": {
      "includeFiles": "api/lib/**",
      "maxDuration": 60
    },
    "api/**/*.ts": {
      "includeFiles": "api/lib/**"
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.bikinibottombets.com" }],
      "destination": "https://bikinibottombets.com/:path*",
      "permanent": true
    },
    { "source": "/dashboard.html", "destination": "/dashboard", "permanent": true },
    { "source": "/docs.html", "destination": "/docs", "permanent": true },
    { "source": "/login.html", "destination": "/login", "permanent": true },
    { "source": "/pipeline.html", "destination": "/pipeline", "permanent": true },
    { "source": "/mobile-setup.html", "destination": "/mobile-setup", "permanent": true },
    { "source": "/vision/index.html", "destination": "/vision", "permanent": true },
    { "source": "/org-spider.html", "destination": "/org-spider", "permanent": true }
  ],
  "rewrites": [
    { "source": "/skill.md", "destination": "/api/skill" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-Moltbook-Identity" }
      ]
    }
  ]
}
